<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="FitnessGuru.MenuPage" Title="Menu" Icon="menu.png">
    <ContentPage.Content>
        <StackLayout  VerticalOptions="CenterAndExpand">
            <Label Text="Menu" FontSize="30" Margin="10" x:Name="lblMenu" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button Text="LOGIN" Clicked="BtnLogin"  BackgroundColor="White"/>
            <Button Text="RESET PASSWORD" Clicked="BtnReset" BackgroundColor="White" />
            <Button Text="WORKOUT LEVEL" Clicked="BtnLevel"  BackgroundColor="White"/>
            <Button Text="EATING HABITS" Clicked="BtnEHabits" BackgroundColor="White"/>
            <Button Text="SET WORKOUT DAYS" Clicked="BtnWDays" BackgroundColor="White"/>
<!--            <Button Text="SET WORKOUT ROUTINE" BackgroundColor="White"/>-->
<!--            <Button Text="SCORE" BackgroundColor="White"/>-->
            <Button Text="LOG OUT" Clicked="BtnLogout" BackgroundColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>